<html>
	<head>
		<meta charset="utf-8">
		<title>Chat re loco</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
		<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script type="text/javascript" src="http://google-code-prettify.googlecode.com/svn/loader/run_prettify.js"></script>		
		<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
		<script type="text/javascript" src="https://cdn.socket.io/socket.io-1.0.6.js"></script>	
		<script type="text/javascript" src="chatclient.js"></script>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<h3>chat re loco</h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10">
					<div class="container">												
						<div class="row">
							<form class="form-horizontal" onsubmit="return false;">
								<div class="form-group">
									<div class="col-xs-4">
										<input type="text" class="form-control" id="nickname" placeholder="pon&eacute; tu apodo">
									</div>
									<div class="col-sm-2">
										<button class="btn btn-info btn-large btn-primary" type="button" id="join-chat">entrar!</button>
									</div>
								</div>							
								<div class="form-group">
									<div class="col-xs-8 col-md-10">	
										<textarea disabled style="cursor: auto" class="form-control chat-widget" id="textarea" rows="10"></textarea>
									</div>
								</div>															
								<div class="form-group">
									<div class="col-xs-4">										
										<input type="text" class="form-control chat-widget" id="message" placeholder="chatear aqu&iacute;">										
									</div>
									<div class="col-sm-2">										
										<button type="submit" class="btn btn-primary chat-widget" id="send-chat">enviar</button>
									</div>
								</div>								
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>